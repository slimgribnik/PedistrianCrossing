<Page
    x:Class="PedistrianCrossing.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PedistrianCrossing"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <RelativePanel Background="#FFB8B1B1" Margin="40,30,44,28" RequestedTheme="Light">
        <Border BorderBrush="#FFEAB3B3" HorizontalAlignment="Left" Height="240" Margin="390,80,-369,-95" VerticalAlignment="Top" Width="80" BorderThickness="3,3,3,3"/>
        <TextBlock x:Name="title" Height="60" TextWrapping="NoWrap" Text="Pedistrian Crossing" FontSize="28" Foreground="Blue"
                     Margin="325,30,-316,-10" HorizontalAlignment="Center"/>
        <Ellipse x:Name="LED_T_RED" Fill="Red" Stroke="White" Width="40" Height="50" Margin="410,95,-390,-75"/>
        <Ellipse x:Name="LED_T_YELLOW" Fill="Yellow" Stroke="White" Width="40" Height="50" Margin="410,165,-390,-145"/>
        <Ellipse x:Name="LED_T_GREEN" Fill="Green" Stroke="White" Width="40" Height="50" Margin="410,235,-390,-215"/>

        <Button x:Name="btnStartStop" Content="Start" Width="75" ClickMode="Press"
                     Click="btnStartStop_Click"  Height="50" FontSize="24"
                     Margin="427,414,-407,-394" HorizontalAlignment="Center"/>


        <Rectangle x:Name="LED_W_RED" Fill="Red" Stroke="White" Width="50" Height="50" Margin="362,386,-342,-366"/>
        <Rectangle x:Name="LED_W_YELLOW" Fill="Yellow" Stroke="White" Width="50" Height="50" Margin="361,445,-341,-425"/>

        <TextBlock x:Name="WalkStatus" Height="60" TextWrapping="NoWrap"
                     Text="Status" FontSize="28" Foreground="Blue"
                     Margin="353,321,-333,-301" HorizontalAlignment="Center"/>

        <!--This will be used for the text to speech output-->
        <MediaElement x:Name="media" AutoPlay="False" />

    </RelativePanel>
</Page>
